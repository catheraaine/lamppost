<% @events.each do |event| %>
<article class="event-card">
  <section class="card-front">

    <div class="left">
      <h3 class="event-title"><%= event.name %></h3>
      <ul>
          <div class="card-left-info">
            <li>
            <% if event.recurring %>
              <div class="subhead info-subhead">Recurring</div>
            <% end %>
            <div class="icon-container">
              <%= render 'time_icon.html.erb' %>
            </div>
            <span class="time-info"><%= event.when %></span>
          </li>
          <li>
            <div class="icon-container">
              <%= render 'location_icon.html.erb' %>
            </div>
            <%= event.location_name %>
            <ul class="subhead info-subhead">
              <li><%= event.street_address %></li>
              <li><%= event.city %> <%= event.state %> <%= event.zipcode %></li>
            </ul>
          </div>
        </li>
      </ul>
    </div>
    <div class="right">
      <p><%= event.description %> </p>

        <ul>
          <li>Frontend</li>
          <li>Writing</li>
          <li>JavaScript</li>
          <li>Ruby</li>
          <li>UX</li>
          <li>C#</li>
          <li>Unity</li>
          <li>Friendship</li>
          <li>Pizza</li>
        </ul>
      </div>
    </section>

    <section class="card-back">
      <div class="left">
        <img class="card-image" src="<%= event.image.url %>" alt="<%= event.name %> image" />
      </div>
      <div class="right">
        <div class="card-offsite-links">
          <h4 class="subhead">Offsite Links</h4>
          <ul>
            <% event.links.each do |link| %>
            <li><a href="<%= link.url %>" title="<%= link.title %>" class="card-button"><%= link.title %></a></li>
            <% end %>
          </ul>
        </div>
        <div class="card-shareable-links">
          <h4 class="subhead">Shareable Link</h4>
          <div class="shareable-link">
            <input class="shareable-url-text-input" type="text" value="seesparkbox.com"></input>
          </div>
        </div>
        <div class="card-report">
          <p>
            See a problem? <a href="#" title="card-report" class="report-link">Let us know</a>.
          </p>
        </div>
      </div>
    </section>
  </article>
  <% end %>
