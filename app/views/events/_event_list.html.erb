<% @events.each do |event| %>
  <article class="event-card">
    <section class="left">
      <h3 class="event-title"><%= event.name %></h3>
      <ul>
        <li>
        <div class="card-left-info">
          <div class="info-subhead">Recurring</div>
          <div class="icon-container">
          <%= render 'time_icon.html.erb' %>
          </div>
          Every month on the first Monday at 6:30pm
        </li>
        <li>
          <div class="icon-container">
          <%= render 'location_icon.html.erb' %>
          </div>
          Sparkbox
          <ul class="info-subhead">
            <li>123 Webster Street</li>
            <li>Dayton, OH 45402</li>
          </ul>
        </div>
        </li>
      </ul>
    </section>
  </article>
<% end %>
